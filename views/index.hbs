<div class="container search-bar">
  <div class="search-bar-outer">
    <div class="search-bar-inner">
      <div class="text-right">
        <a href="/my_restaurant/new"><button class="btn btn-primary">新增餐廳</button></a>
      </div>
      <form action="/search">
        <h4 class="mb-2">尋找餐廳：</h4>
        <div class="input-group">
          <input type="text" name="keywords" class="form-control" placeholder="輸入餐廳、分類" aria-label="Restaurant Name..."
            aria-describedby="search-button" value="{{keywords}}" />
          <div class="input-group-append">
            <button class="btn btn-major" type="submit" id="search-button"><i class="fas fa-search"></i></button>
            <div class="dropdown">
              <button class="btn btn-outline-success dropdown-toggle" type="button" id="sortBottom"
                data-bs-toggle="dropdown" aria-expanded="false">
                排序
              </button>
              <ul class="dropdown-menu" aria-labelledby="sortBottom">
                {{#if keywords}}
                <li><a class="dropdown-item" href="?keywords={{ keywords }}&value=1">A → Z</a></li>
                <li><a class="dropdown-item" href="?keywords={{ keywords }}&value=2">Z → A</a></li>
                <li><a class="dropdown-item" href="?keywords={{ keywords }}&value=3">類別</a></li>
                <li><a class="dropdown-item" href="?keywords={{ keywords }}&value=4">地區</a></li>
                {{else}}
                <li><a class="dropdown-item" href="?value=1">A → Z</a></li>
                <li><a class="dropdown-item" href="?value=2">Z → A</a></li>
                <li><a class="dropdown-item" href="?value=3">類別</a></li>
                <li><a class="dropdown-item" href="?value=4">地區</a></li>
                {{/if}}
              </ul>
            </div>
          </div>
        </div>
      </form>
    </div>
  </div>
</div>

<!-- restaurant list -->
<div class="container mt-5">
  <div class="row">
    <div class="col-md-10 col-12 mx-auto">
      <div class="card-columns">
        {{#each restaurants}}
        <div class="card mb-1">
          <img class="card-img-top" src="{{this.image}}" alt="{{this.name}}" />
          <div class="card-body p-3">
            <h6 class="card-title mb-1 text-secondary">{{this.name}}</h6>

            <div class="restaurant-category mb-1">
              <i class="fas fa-utensils pr-2"></i>
              {{this.category}}
            </div>

            <span class="badge badge-pill badge-danger font-weight-normal">
              {{this.rating}}
              <i class="fas fa-star fa-xs"></i>
            </span>

          </div>
          <div class="text-right">
            <a href="/my_restaurant/{{ this._id }}" class="btn btn-info btn-sm">detail</a>
            <a href="/my_restaurant/{{ this._id }}/edit" class="btn btn-warning btn-sm">edit</a>
            <form action="./my_restaurant/{{ this._id }}?_method=DELETE" method="POST" style="display: inline;">
              <button class="btn btn-danger btn-sm" type="submit">delete</button>
            </form>
          </div>
        </div>
        {{/each}}
      </div>
    </div>
  </div>
</div>