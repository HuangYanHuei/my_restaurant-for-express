<h1 class="mb-1 restaurant-show-title">修改餐廳</h1>
<div class="container">
  <form action="/my_restaurant/{{restaurants._id}}?_method=PUT" method="POST">
    <div class="mb-3">
      <label for="name" class="form-label">店名<span class="text-danger">*</span></label>
      <input type="text" class="form-control" id="name" name="name" value="{{restaurants.name}}" required />
    </div>
    <div class="mb-3">
      <label for="name_en" class="form-label">英文店名<span class="text-danger">*</span></label>
      <input type="text" class="form-control" id="name_en" name="name_en" value="{{restaurants.name_en}}" required />
    </div>
    <div class="mb-3">
      <label for="category" class="form-label">分類<span class="text-danger">*</span></label>
      <input type="text" class="form-control" id="category" list="categoryOptions" name="category"
        value="{{restaurants.category}}" required />
    </div>
    <div class="mb-3">
      <label for="image" class="form-label">圖片連結<span class="text-danger">*</span></label>
      <input type="url" class="form-control" id="image" name="image" value="{{restaurants.image}}" required />
    </div>
    <div class="mb-3">
      <label for="location" class="form-label">地址<span class="text-danger">*</span></label>
      <input type="text" class="form-control" id="location" name="location" value="{{restaurants.location}}" required />
    </div>
    <div class="mb-3">
      <label for="phone" class="form-label">電話<span class="text-danger">*</span></label>
      <input type="tel" class="form-control" id="phone" name="phone" value="{{restaurants.phone}}" required />
    </div>
    <div class="mb-3">
      <label for="google_map" class="form-label">Google地圖連結<span class="text-danger">*</span></label>
      <input type="url" class="form-control" id="google_map" name="google_map" value="{{restaurants.google_map}}"
        required />
    </div>
    <div class="mb-3">
      <label for="rating" class="form-label">評分<span class="text-danger">*</span></label>
      <input type="number" class="form-control" id="rating" min="0" max="5" step="0.1" name="rating"
        value="{{restaurants.rating}}" required />
    </div>
    <div class="mb-3">
      <label for="description" class="form-label">敘述<span class="text-danger">*</span></label>
      <textarea class="form-control" id="description" rows="3" name="description"
        required>{{restaurants.description}}</textarea>
    </div>
    <div class="text-center">
      <button type="submit" class="btn btn-primary">
        修改餐廳
      </button>
      <a href="/">
        <button type="button" class="btn btn-outline-secondary">
          返回首頁
        </button>
      </a>
    </div>
  </form>
</div>